<h1><%=@task.title%></h1>

<p><%=@task.details%></p>

 <label>
    <%if @task.completed == true %>
      <input type="checkbox" name="completed" checked> This task is complete!
    <% else %>
      <input type="checkbox" name="completed"> This task is not completed yet
    <% end %>
  </label>

<p><%= link_to "Back to list", tasks_path %></p>

<p><%= link_to "Edit task", edit_path(@task) %></p>
